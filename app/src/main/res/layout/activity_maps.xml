<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mahmoudrawy.eladan.Views.Views.MapsActivity" />


    <ImageView
        android:id="@+id/IMG_location_icon"
        android:layout_width="@dimen/map_buttons_width_height"
        android:layout_height="@dimen/map_buttons_width_height"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/location_button_margin"
        android:contentDescription="@string/location_button_content_description"
        android:src="@drawable/ic_shortcut_gps_fixed" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/FBT_goToDetails"
        android:layout_width="@dimen/map_buttons_width_height"
        android:layout_height="@dimen/map_buttons_width_height"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/location_button_margin"
        android:contentDescription="@string/detail_button_content_description"
        android:src="@drawable/ic_shortcut_arrow_forward"
        app:backgroundTint="@color/white_background" />


</FrameLayout>
